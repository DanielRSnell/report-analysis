---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

// Check if already logged in
const sessionCookie = Astro.cookies.get('session');
const isLoggedIn = !!sessionCookie?.value;

// Handle form submission
let message = '';
let messageType: 'success' | 'error' | '' = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString();
    const password = formData.get('password')?.toString();

    if (!email || !password) {
      message = 'Please enter both email and password';
      messageType = 'error';
    } else {
      // Authenticate with Supabase
      const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password
      });

      if (error) {
        message = error.message || 'Invalid email or password';
        messageType = 'error';
      } else if (data.session) {
        // Set session cookie with the access token
        Astro.cookies.set('session', data.session.access_token, {
          path: '/',
          maxAge: 60 * 60 * 24 * 7, // 7 days
          httpOnly: true,
          secure: import.meta.env.PROD,
          sameSite: 'lax'
        });

        // Redirect to home
        return Astro.redirect('/');
      } else {
        message = 'Login failed. Please try again.';
        messageType = 'error';
      }
    }
  } catch (error) {
    console.error('Login error:', error);
    message = 'An error occurred. Please try again.';
    messageType = 'error';
  }
}
---

<Layout title="Login - KB Recommendations">
  <div class="fixed inset-0 flex items-center justify-center px-6 bg-gray-50">
    <div class="w-full max-w-md">
      {isLoggedIn ? (
        <!-- Already Logged In State -->
        <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
          <div class="text-center mb-6">
            <div class="text-5xl mb-4">✅</div>
            <h1 class="text-2xl font-semibold mb-2">You're Already Logged In</h1>
            <p class="text-gray-600 text-sm">
              You're currently logged in to KB Recommendations
            </p>
          </div>

          <div class="space-y-3">
            <a
              href="/"
              class="block w-full text-center px-4 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors font-medium"
            >
              Go to Dashboard
            </a>

            <form method="POST" action="/logout">
              <button
                type="submit"
                class="w-full px-4 py-3 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors font-medium"
              >
                Logout
              </button>
            </form>
          </div>
        </div>
      ) : (
        <!-- Login Form -->
        <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
          <div class="text-center mb-8">
            <h1 class="text-2xl font-semibold mb-2">Welcome Back</h1>
            <p class="text-gray-600 text-sm">
              Sign in to access KB Recommendations
            </p>
          </div>

          {message && (
            <div
              class:list={[
                'mb-6 p-4 rounded-md text-sm',
                messageType === 'success' && 'bg-green-50 text-green-700 border border-green-200',
                messageType === 'error' && 'bg-red-50 text-red-700 border border-red-200'
              ]}
            >
              {message}
            </div>
          )}

          <form method="POST" class="space-y-5">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                autocomplete="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Enter your email"
              />
            </div>

            <div>
              <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                Password
              </label>
              <input
                type="password"
                id="password"
                name="password"
                required
                autocomplete="current-password"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Enter your password"
              />
            </div>

            <button
              type="submit"
              class="w-full px-4 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors font-medium"
            >
              Sign In
            </button>
          </form>

          <div class="mt-6 text-center">
            <a href="/" class="text-sm text-blue-600 hover:underline">
              ← Back to Home
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>
