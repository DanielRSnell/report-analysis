---
interface Props {
  status: string;
}

const { status } = Astro.props;
const statusLower = status.toLowerCase();
---

<span
  class:list={[
    'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium',
    statusLower === 'draft' && 'bg-gray-50 text-gray-500',
    statusLower === 'reviewed' && 'bg-amber-50 text-amber-600',
    statusLower === 'approved' && 'bg-green-50 text-green-600',
    statusLower === 'published' && 'bg-blue-50 text-blue-600'
  ]}
>
  {status.charAt(0).toUpperCase() + status.slice(1)}
</span>
