---
const { current = 'home' } = Astro.props;
---

<header class="bg-white border-b border-gray-200 py-6 mb-12">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex justify-between items-center">
      <a href="/" class="text-xl font-semibold text-gray-900 no-underline">
        KB Recommendations
      </a>
      <div class="flex items-center gap-6">
        <nav class="flex gap-6">
          <a
            href="/"
            class:list={[
              'text-sm no-underline transition-colors',
              current === 'home' ? 'text-gray-900 font-medium' : 'text-gray-500 hover:text-gray-900'
            ]}
          >
            All Slugs
          </a>
          <a
            href="/ticket-analysis"
            class:list={[
              'text-sm no-underline transition-colors',
              current === 'ticket-analysis' ? 'text-gray-900 font-medium' : 'text-gray-500 hover:text-gray-900'
            ]}
          >
            Ticket Analysis
          </a>
        </nav>
        <form method="POST" action="/logout" class="m-0">
          <button
            type="submit"
            class="text-sm text-gray-500 hover:text-gray-900 transition-colors"
          >
            Logout
          </button>
        </form>
      </div>
    </div>
  </div>
</header>
